/**
 * Implements hook_form_validate().
 */
function yakforms_form_webform_configure_form_validate($form, &$form_state) {
    // No constraint for admin users.
    if (user_access('administer nodes')) {
        return;
    }
    $form_values = $form_state['values'];
    $site_limit = variable_get('yakforms_submissions_per_form_limit', 0);
    // Make sure the submission limit is not higher than than the site-wide limit.
    if ($site_limit != 0 && $form_values['total_submit_limit'] > $site_limit) {
        form_set_error(
            '[submission][total_submit_limit]',
            t(
                "The submission limit can't be higher than what the site's maximum (!limit).",
                ['!limit' => $site_limit]
            )
        );
    }
}

