/**
 * Implements hook_node_presave.
 *
 * On node modification, if the form was about to expire and the date was pushed
 * back by the user, take the node out of the yakforms_expired table.
 */
function yakforms_node_presave($node){
    module_load_include('inc', 'yakforms', 'includes/yakforms.util');
    if ($node->type != 'form1' || !_form_is_almost_expired($node)) {
        return;
    }
    watchdog(
        'yakforms',
        'The form !nid was about to expire, but the form was modified. Deleting this form from yakforms_expired.',
        array(
            '!nid' => $node->nid,
        ),
        WATCHDOG_NOTICE
    );

    try{
        db_delete('yakforms_expired')
            ->condition('nid', $node->nid)
            ->execute();
    } catch (PDOException $e) {
        watchdog(
            'yakforms',
            'Error taking the node !nid out of yakforms_expired in yakforms_node_presave : %error',
            array(
                '%error' => $e,
                '!nid' => $node->nid
            ),
            WATCHDOG_ERROR);
    }
}

/**
 * Implements hook_block_view.
 * Defines content for Yakforms-specific blocks.
 *
 * @param string $delta
 *   : the block identifier.
 *
 * @return void
 */
function yakforms_block_view($delta) {
    module_load_include('inc', 'yakforms', 'includes/yakforms.block');
    global $user;
    global $base_url;
    $block = array();
    // Get the current nid to generate content from there.
    $current_url = $_GET['q'];
    $matches = array();
    preg_match("/node\/([0-9]+)/", $current_url, $matches);
    if (isset($matches[1])) {
        $nid = $matches[1] ? $matches[1] : NULL;
    }
    else {
        $nid = NULL;
    }
    // Generate content by block ID.
    switch ($delta) {
        case 'yakforms_contact_form_block':
            $block['content'] = array();
            // Only display this block on form1-type nodes.
            if (!isset($nid) || !node_is_form1($nid)) {
                return;
            }
            // don't show this block on edit pages of form1 nodes.
            if (strpos($current_url, 'edit')) {
                return;
            }
            $block['content'] = array();
            $block['content']['#markup'] = "";
            $block['content']['#markup'] .= get_contact_form_content($nid);
            break;

        case 'yakforms_no_password':
            // Only display this block on form1-type nodes.
            if (!isset($nid) || !node_is_form1($nid)) {
                return;
            }
            // don't show this block on edit pages of form1 nodes.
            if (strpos($current_url, '/edit')) {
                return;
            }
            $block['content'] = array(
                '#markup' => "<i>" . t("Do not communicate any password through Yakforms.") . "</i>",
            );
            break;

        case 'yakforms_header':
            $block['content']['#markup'] = "<header ><a href='{$base_url}'><h1 class='big-title'>" . variable_get('yakforms_general_header_html') . '</h1></a></header>';
            $block['content']['#markup'] .= '<p class="lead">' . variable_get('site_slogan') . '</p>';
            break;

        case 'yakforms_anonymous_header':
            // Only display to anonymous users.
            if (user_is_logged_in()) {
                return;
            }
            $block['content']['#markup'] = '<div class="user-block-connect">';
            $block['content']['#markup'] .= "<a href='{$base_url}/user/register' class='btn btn-success btn-sm' role='button'>" . t("Register") . "</a>";
            $block['content']['#markup'] .= '&nbsp;&nbsp;&nbsp;&nbsp;';
            $block['content']['#markup'] .= "<a href='{$base_url}/user' class='btn btn-primary btn-sm' role='button'>" . t("Log in") . "</a><br/><br/>";
