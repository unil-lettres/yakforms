/**
 * Form submit callback for users/%/cancel.
 *
 * Calls export of all of the user's form submissions as csv files.
 *
 * @param Array $form
 * @param Array $form_state
 * @return void
 */
function yakforms_export_users_content_before_delete_submit(&$form, &$form_state){
    module_load_include('inc', 'yakforms', 'includes/yakforms.expiration');
    $uid = $form['uid']['#value'];
    // Get the user's forms
    try{
        $user_forms = db_select('node', 'n')
            ->fields('n', array('nid'))
            ->condition('uid', $uid)
            ->execute()
            ->fetchAll();
    }
    catch(Exception $e){
        watchdog('yakforms', "Unable to export forms for user %id : Error in yakforms_export_users_content_before_delete_submit. %error",
            array('%id' => $uid, '%error' => $e),
            WATCHDOG_ERROR
        );
    }
    foreach($user_forms as $form){
        yakforms_export_node_submissions($form->nid);
    }
}
